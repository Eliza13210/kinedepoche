<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/light_grey"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <!--TIMER-->
            <ImageView
                android:id="@+id/ic_timer"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:contentDescription="@string/timer"
                android:scaleType="centerCrop"
                android:src="@drawable/outline_timer_black_24" />

            <TextView
                android:id="@+id/timer_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="40 s"
                android:textSize="@dimen/text_size_title" />

            <View
                android:layout_width="1dp"
                android:layout_height="32dp"
                android:layout_margin="8dp"
                android:background="@android:color/darker_gray" />

            <!--PAUSE-->
            <ImageView
                android:id="@+id/ic_pause"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:contentDescription="@string/pause"
                android:scaleType="centerCrop"
                android:src="@drawable/outline_pause_circle_outline_black_24" />

            <View
                android:layout_width="1dp"
                android:layout_height="32dp"
                android:layout_margin="8dp"
                android:background="@android:color/darker_gray" />

            <!--REPEAT-->
            <ImageView
                android:id="@+id/ic_repeat"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:contentDescription="@string/repeat"
                android:scaleType="centerCrop"
                android:src="@drawable/outline_refresh_black_24" />

            <TextView
                android:id="@+id/repeat_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="2x"
                android:textSize="@dimen/text_size_title" />

        </LinearLayout>


        <!--BUTTON-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:layout_margin="4dp"
            android:layout_marginTop="60dp"
            android:padding="4dp"
            android:text="@string/start_btn"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button" />
    </androidx.cardview.widget.CardView>
</FrameLayout>