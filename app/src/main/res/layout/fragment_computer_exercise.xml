<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ComputerExerciseFragment">

    <!--Navigation exercises-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_left"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:contentDescription="@string/icon_left"
            android:focusable="true"
            android:src="@drawable/ic_left" />

        <TextView
            android:id="@+id/exercise_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/exercise_1_of_4"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title" />

        <ImageView
            android:id="@+id/ic_right"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:contentDescription="@string/icon_right"
            android:focusable="true"
            android:src="@drawable/ic_right" />
    </LinearLayout>


    <!--VIDEO VIEW-->
    <VideoView
        android:id="@+id/exercise_video_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <!--DESCRIPTION EXERCISE-->
    <TextView
        android:id="@+id/description_exercise"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:layout_weight="0.5"
        android:text="DESCRIPTION EXERCISES" />

    <!--PROGRESSBAR-->
    <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
        android:id="@+id/circular_progress"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        app:direction="clockwise"
        app:drawDot="false"
        app:progressBackgroundColor="@color/grey"
        app:progressBackgroundStrokeWidth="8dp"
        app:progressColor="@color/colorPrimaryDark"
        app:progressStrokeWidth="8dp"
        app:textColor="@color/colorPrimaryDark"
        app:textSize="16sp" />

    <!--TIMER LAYOUT-->
    <include
        layout="@layout/timer_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>